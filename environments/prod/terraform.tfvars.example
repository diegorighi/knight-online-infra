# Knight Online Server - Production Environment Variables
# Copy this file to terraform.tfvars and fill in the values

aws_region   = "us-east-1"
project_name = "knight-online-prod"

# IMPORTANT: Replace with your admin IPs
admin_ip_cidrs = ["YOUR.IP.ADDRESS.HERE/32"]

# Key pair
existing_key_name = "your-production-key"

# Game Server - Production specs
game_server_instance_type = "t3.large"   # 2 vCPU, 8GB RAM (~$60/month)
game_server_volume_size   = 100          # GB
create_data_volume        = true
data_volume_size          = 100          # GB for game data/backups

# Web Server
create_web_server        = true
web_server_instance_type = "t3.small"    # 2 vCPU, 2GB RAM (~$15/month)
web_server_volume_size   = 30            # GB
