# Knight Online Server - Development Environment Variables (FREE TIER)
# Copy this file to terraform.tfvars and fill in the values

# AWS Region
aws_region = "us-east-1"

# Project name (used for resource naming)
project_name = "knight-online-dev"

# IMPORTANT: Replace with your public IP for secure access
# Get your IP: curl ifconfig.me
admin_ip_cidrs = ["YOUR.IP.ADDRESS.HERE/32"]

# Key pair configuration
# Option 1: Use existing key pair
existing_key_name = "your-existing-key-name"

# Option 2: Create new key pair
# create_key_pair = true
# public_key = "ssh-rsa AAAAB3..."

# ============================================
# FREE TIER CONFIGURATION
# ============================================
# - t2.micro: 750 hours/month FREE (first 12 months)
# - EBS: 30GB FREE (first 12 months)
# - Elastic IP: FREE when attached to running instance
# ============================================

# Game Server - FREE TIER
game_server_instance_type = "t2.micro"   # 1 vCPU, 1GB RAM - FREE
game_server_volume_size   = 30           # GB - FREE TIER limit

# Web Server - DISABLED for Free Tier (only 1 t2.micro free)
# Enable only if you're OK with charges or use the same server
create_web_server         = false
# web_server_instance_type  = "t2.micro"
# web_server_volume_size    = 8
